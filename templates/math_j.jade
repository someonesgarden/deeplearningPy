extends layout_j

block content
    div.site-wrapper: div.site-wrapper-inner: div.container
        div.row: div.col-xs-12
            h1 MATH for Deep Learnings.
            p.lead
            div#thumbnails.row
                div.thumb.col-lg-3.col-md-3.col-sm-4.col-xs-6
                    a(href="math/0")
                        div.thumbnail: img(src="/static/img/linearregression2.png")
                        h3 Linear Regression.
                        p McCullock and Pitts neuron / Linear Regression

block footer_script
    link(rel="stylesheet", href="/static/css/masonry.css")
    script(src="/static/bower_components/masonry/dist/masonry.pkgd.min.js")
    script(src="/static/bower_components/imagesloaded/imagesloaded.pkgd.min.js")
    script.
        $(document).ready(function() {
            $('li#math').addClass('active');

            var $container = $('#thumbnails');
            $container.imagesLoaded(function() {
                $container.masonry({
                    columnWidth: '.thumb',
                    itemSelector: '.thumb'
                });
            });
        });