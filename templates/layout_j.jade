doctype html
html#ng-app(lang="ja")
     head
        if essentials
            title {{ essentials.site_title }}
        else
            title DeepLearnings by Someonesgarden.
        endif
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(type="image/x-icon", href="/static/favicon.ico", rel="shortcut icon")
        link(type="image/x-icon", href="/static/favicon.ico", rel="icon")

        link(rel="stylesheet", href="/static/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/static/css/cover.css")
        script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")

        //AFRAME/D3
        script(src="/static/bower_components/d3/d3.js")
        script(src="/static/bower_components/aframe/dist/aframe-master.js")
        script(src="/static/bower_components/aframe-html-shader/dist/aframe-html-shader.min.js")
        script.
            var MainApp = {};

        body(ng-controller="bodyController")
            include masthead_j.jade
            block content
            include footer_j.jade

        //BOOTSTRAP
        script(src="/static/bower_components/jquery/dist/jquery.min.js")
        script(src="/static/bower_components/bootstrap/dist/js/bootstrap.min.js")
        //ANGULAR
        script(src="/static/bower_components/angular/angular.min.js")
        link(href="https://cdn.rawgit.com/indrimuska/angular-switcher/master/dist/angular-switcher.min.css")
        script(src="https://cdn.rawgit.com/indrimuska/angular-switcher/master/dist/angular-switcher.min.js")
        script(src="/static/bower_components/bootstrap-filestyle/src/bootstrap-filestyle.min.js")
        //ANGULAR-BOOTSTRAP
        script(src="/static/bower_components/angular-bootstrap/ui-bootstrap.min.js")
        script(src="/static/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js")

        script(src="/static/js/angular/app.js")
        script(src="/static/js/angular/services.js")
        script(src="/static/js/angular/directives.js")
        script(src="/static/js/angular/controllers.js")

        //LATEX
        script(type="text/x-mathjax-config").
            MathJax.Hub.Config({
                tex2jax: {
                    inlineMath: [['$','$'], ['\\(','\\)']],
                    processEscapes: true
                    }
            });
        script(src="/static/bower_components/MathJax/MathJax.js?config=TeX-AMS_HTML")
        //HIGHLIGHT.JS
        link(href="/static/bower_components/highlightjs/styles/tomorrow-night.css")
        script(src="/static/bower_components/highlightjs/highlight.pack.min.js")
        script.
            hljs.initHighlightingOnLoad();

        block footer_script


